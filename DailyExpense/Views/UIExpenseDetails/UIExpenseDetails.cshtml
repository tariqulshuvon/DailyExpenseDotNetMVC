
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "UIExpenseDetails";

}
<section>

    <div style="height:150px"></div>
</section>
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-2">

            </div>
            <div class="col-lg-8">
                <div class="row">
                    <input type="hidden" class="form-control" id="txtExpNo" value="N"/>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="showToday" autocomplete="off" style="width:30%; padding:4px; margin:4px; float:left;" placeholder="select date" />
                        <div>
                            <input type="text" id="lblExpNo"  class="form-group" style="width:30%; padding:4px; margin:4px; float:right;" />
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <button id="btnModal" class="btn btn-info" style="float:right">Add New</button>
                    </div>
                </div>
                <div>
                    <table id="tblExpD" class="display responsive nowrap" style="width: 100%;font-size: 10px;">
                        <thead>
                            <tr>
                                <th>SL</th>
                                <th>Name</th>
                                <th>Item</th>
                                <th>Qty</th>
                                <th>Rate</th>
                                <th>Value</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <div class="col-md" style="float:right">
                    <button id="btnSave" class="btn btn-danger" style="float:right">Save</button>
                </div>
                <div class="col-md" >
                    <button id="btnModalExp" class="btn btn-primary" style="float:left">Saved Expenses</button>

                </div>
            </div>
            <div class="col-lg-2"></div>
        </div>

    </div>
</section>

<section>
    <div id="myModal" class="modal fade">
        <div class="modal-dialog modal-md">
            <div class="modal-content" style="width:100%;">
                <div class="modal-header">
                    <span id="closeModal" type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</span>
                    <h2 class="modal-title">Add Expanse Details Data</h2>
                </div>
                <div class="modal-body">
                    <div>
                        <div class="row">
                            <div class="col-lg-12" style="text-align:left">
                                <div style="padding-bottom:10px">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <input type="hidden" class="form-control" id="txtExpNo" />

                                            <label for="txtName">Name: </label>
                                            <input type="text" id="txtName" class="form-control" placeholder="Enter Name..." required  autocomplete="off"/>
                                        </div>
                                    </div>
                                </div>
                                <div style="padding-bottom:10px">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <label for="txtItem">Item: </label>
                                            <input type="text" id="txtItem" class="form-control" placeholder="Enter Item..." required autocomplete="off"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="padding-bottom:10px">
                                    <div class="col-lg-4">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <label for="txtQty">Quantity: </label>
                                                <input type="text" id="txtQty" class="form-control" placeholder="Enter Quantity..." style="text-align:end" required onkeypress="return ExpDetailsHelper.AllowNumbersOnly(event)" oninput="ExpDetailsHelper.calculateValue()" autocomplete="off"/>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-lg-4"></div>
                                    <div class="col-lg-4">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <label for="txtRate">Rate: </label>
                                                <input type="text" id="txtRate" class="form-control" placeholder="Enter Rate..." style="text-align:end" required onkeypress="return ExpDetailsHelper.isDeciaml(this, event, 2)" oninput="ExpDetailsHelper.calculateValue()" autocomplete="off" />
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div style="padding-bottom:10px">
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <label for="txtValue">Value: </label>
                                            <input type="text" id="txtValue" class="form-control" style="text-align:end" readonly />
                                        </div>
                                    </div>
                                </div>
                                <div class="row"></div>
                                <div class="col-lg-12">
                                    <div style="padding-bottom:10px" class="col-lg-4">
                                        <button class="btn btn-info" style="width:100%" id="btnAddToTable">Add to table</button>
                                    </div>
                                    <div style="padding-bottom:10px" class="col-lg-4">
                                        <button class="btn btn-warning" style="width:100%" id="btnClrModal">Clear</button>
                                    </div>
                                    <div style="padding-bottom:10px" class="col-lg-4">
                                        <button class="btn btn-danger" style="width:100%" id="btnCloseModal">Close</button>
                                    </div>
                                </div>
                                @*<div class="col-md-12">
                                    <button class="btn btn-danger" style="width:100%" id="btnSaveToDb">Save To DB</button>

                                </div>*@
                            </div>
                        </div>




                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section>
    <div id="myModalExpDetails" class="modal fade">
        <div class="modal-dialog modal-md">
            <div class="modal-content" style="width:100%;">
                <div class="modal-header">
                    <span id="closeModal" type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</span>
                    <h2 class="modal-title">All Expenses</h2>
                </div>
                <div class="modal-body">
                    <div>
                        <table id="tblExpDList" class="display responsive nowrap" style="width: 100%; font-size: 10px;">
                            <thead>
                                <tr>
                                    <th>SL</th>
                                    <th>Expense No</th>
                                    <th>Total Amount</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/Scripts/UIExpenseDetails/UIExpenseDetails.js");
    <link href="~/Content/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <script src="~/Content/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"></script>

}